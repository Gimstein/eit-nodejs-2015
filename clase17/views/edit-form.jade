extends layout

block content
	section.container
		div#logo
		h1
			a(href="/")=title
		h2 Bienvenido #{user}
		a(href="/logout") Cerrar sesión
		article.article
			form.form(method="post", action="/pelicula/#{data.movie_id}")
				fieldset
					div
						label(for="id") Id Película:
						input#id(type="text", name="id", value="#{data.movie_id}", disabled, required)
						input#movie_id(type="hidden", name="movie_id", value="#{data.movie_id}", required)
					div
						label(for="title") Título:
						input#title(type="text", name="title", value="#{data.title}", required)
					div
						label(for="release_year") Año:
						input#release_year(type="text", name="release_year", value="#{data.release_year}", required)
					div
						label(for="rating") Calificación:
						input#rating(type="text", name="rating", value="#{data.rating}", required)
					div
						label(for="image") Poster:
						input#image(type="text", name="image", value="#{data.image}", required)
					div
						input(type="hidden", name="_method", value="put")
						input.button.edit(type="submit", value="Editar")